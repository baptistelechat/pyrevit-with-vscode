{
  "name": "pyrevit-with-vscode",
  "displayName": "pyRevit with VSCode",
  "description": "A VS Code extension to simplify the creation of Revit plug-ins using pyRevit.",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baptistelechat/pyrevit-with-vscode"
  },
  "author": {
    "email": "baptistelechat@outlook.fr",
    "name": "Baptiste LECHAT",
    "url": "https://github.com/baptistelechat"
  },
  "publisher": "baptistelechat",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Extension Packs"
  ],
  "keywords": [
    "revit",
    "pyrevit",
    "python"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "src/lib/assets/img/logo/pyRevitWithVSCodeLogo_min.png",
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "light"
  },
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "configuration": {
      "title": "pyRevit with VS Code",
      "properties": {
        "pyrevit-with-vscode.author": {
          "type": "string",
          "default": "",
          "description": "Author name in snippets for pyRevit with VS Code."
        }
      }
    },
    "commands": [
      {
        "command": "pyrevit-with-vscode.setup",
        "title": "%setup%"
      },
      {
        "command": "pyrevit-with-vscode.docs",
        "title": "%docs%"
      },
      {
        "command": "pyrevit-with-vscode.components",
        "title": "%components%"
      }
    ],
    "snippets": [
      {
        "language": "python",
        "path": "./src/snippets/pyrevit-min.code-snippets"
      },
      {
        "language": "python",
        "path": "./src/snippets/pyrevit-full.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "pnpm dlx vsce package --no-dependencies",
    "publish:patch": "pnpm version patch --no-commit --git-tag-version=false --message=\"\" && pnpm vsce publish patch --no-dependencies",
    "publish:minor": "pnpm version minor --no-commit --git-tag-version=false --message=\"\" && pnpm vsce publish minor --no-dependencies",
    "publish:major": "pnpm version major --no-commit --git-tag-version=false --message=\"\" && pnpm vsce publish major --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18"
  }
}
