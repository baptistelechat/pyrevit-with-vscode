{
  "name": "pyrevit-with-vscode",
  "displayName": "pyRevit with VSCode",
  "description": "A VS Code extension to simplify the creation of Revit plug-ins using pyRevit.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baptistelechat/pyrevit-with-vscode"
  },
  "author": {
    "email": "baptistelechat@outlook.fr",
    "name": "Baptiste LECHAT",
    "url": "https://github.com/baptistelechat"
  },
  "publisher": "baptistelechat",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Extension Packs"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "pyrevit-with-vscode.pythonExtension",
        "title": "%pythonExtension%"
      },
      {
        "command": "pyrevit-with-vscode.revitApiStubs",
        "title": "%revitApiStubs%"
      },
      {
        "command": "pyrevit-with-vscode.pyRevitLib",
        "title": "%pyRevitLib%"
      },
      {
        "command": "pyrevit-with-vscode.vscSettings",
        "title": "%vscSettings%"
      },
      {
        "command": "pyrevit-with-vscode.revitApiDocs",
        "title": "%revitApiDocs%"
      },
      {
        "command": "pyrevit-with-vscode.pyRevitDocs",
        "title": "%pyRevitDocs%"
      }
    ],
    "snippets": [
      {
        "language": "python",
        "path": "./src/snippets/pyrevit-min.code-snippets"
      },
      {
        "language": "python",
        "path": "./src/snippets/pyrevit-full.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18"
  }
}
