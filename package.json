{
  "name": "pyrevit-with-vscode",
  "displayName": "pyRevit with VSCode",
  "description": "A VS Code extension to simplify the creation of Revit plug-ins using pyRevit.",
  "version": "1.2.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baptistelechat/pyrevit-with-vscode"
  },
  "author": {
    "email": "baptistelechat@outlook.fr",
    "name": "Baptiste LECHAT",
    "url": "https://github.com/baptistelechat"
  },
  "publisher": "baptistelechat",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Extension Packs"
  ],
  "keywords": [
    "revit",
    "pyrevit",
    "python"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "src/lib/assets/img/logo/pyRevitWithVSCodeLogo_min.png",
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "light"
  },
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "configuration": {
      "title": "pyRevit with VS Code",
      "properties": {
        "pyrevit-with-vscode.author": {
          "type": "string",
          "default": "",
          "description": "Author name in snippets for pyRevit with VS Code."
        }
      }
    },
    "commands": [
      {
        "command": "pyrevit-with-vscode.setup",
        "title": "%setup%"
      },
      {
        "command": "pyrevit-with-vscode.docs",
        "title": "%docs%"
      },
      {
        "command": "pyrevit-with-vscode.components",
        "title": "%components%"
      }
    ],
    "snippets": [
      {
        "language": "python",
        "path": "./src/snippets/pyrevit-min.code-snippets"
      },
      {
        "language": "python",
        "path": "./src/snippets/pyrevit-full.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "vsce package",
    "publish:patch": "vsce publish patch --message=\"ðŸš€ (Publish) - Increment patch version\"",
    "publish:minor": "vsce publish minor --message=\"ðŸš€ (Publish) - Increment minor version\"",
    "publish:major": "vsce publish major --message=\"ðŸš€ (Publish) - Increment major version\""
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/svg2png": "^4.1.5",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/tinycolor2": "^1.4.6",
    "@vscode/l10n": "^0.0.18",
    "sharp": "^0.33.4",
    "simple-git": "^3.27.0",
    "svg2png": "^4.1.1",
    "tinycolor2": "^1.6.0"
  },
  "packageManager": "yarn@1.22.22"
}
